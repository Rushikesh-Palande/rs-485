APP_NAME=rs485-enterprise
APP_ENV=dev
LOG_LEVEL=INFO

# Serial / RS-485
SERIAL_MODE=simulator          # simulator | serial
SERIAL_PORT=auto               # auto discovers COM/tty; override with explicit path like COM3
SERIAL_BAUDRATE=115200

# Web
HOST=0.0.0.0
PORT=8000

# Telemetry simulator rate
SIM_DEVICE_ID=board-01
SIM_INTERVAL_MS=300

DB_WRITE_BATCH_SIZE=200
DB_WRITE_FLUSH_MS=200
DB_QUEUE_MAXSIZE=20000
DB_DEVICE_CACHE_SIZE=5000
